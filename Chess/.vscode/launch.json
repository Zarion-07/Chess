{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Chess Project",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net9.0/Chess.dll",
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "name": "Open Chrome (Instance1)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "https://localhost:7020",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Open Chrome (Instance2)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "https://localhost:6001",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Run + Chrome (Instance1)",
      "configurations": ["Run Chess Project", "Open Chrome (Instance1)"]
    },
    {
      "name": "Run + Chrome (Instance2)",
      "configurations": ["Run Chess Project", "Open Chrome (Instance2)"]
    }
  ]
}


